<h2>Lista de categorias</h2>
<hr>
<a href='/admin/categoria/add'><button class="btn btn-success">Nova Categoria </button></a>
{{#each categoria}}
<div class="card mt-4">
<div class="card-body">
    <h4>{{nome}}</h4>
    <small>Slug ; {{slug}}</small><br>
    <small>Data de criação : {{date}}</small>
    <hr>
    <a href='/admin/categorias/edit/{{_id}}'><button type="submit" class="btn btn-success">Editar Categorias</button></a>
     <form method="POST" action="/admin/categorias/deletar">
        <input type="hidden" name="id" value="{{_id}}"/>
        <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
    </form>
    
</div>

</div>

{{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada</h4>
{{/each}}